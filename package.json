{
  "name": "strap",
  "version": "0.0.0",
  "description": "Javascript monorepo boilerplate",
  "scripts": {
    "start": "npm run build:browser:dev",
    "build:browser:dev": "webpack-dev-server --env 'browser.dev'",
    "build:browser:prod": "webpack --env 'browser.prod'",
    "test": "jest --watch --coverage",
    "test-ci": "jest --bail --coverage",
    "lint": "eslint . --fix; stylelint **/*.css",
    "help": "webpack --help"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/meatwallace/strap.git"
  },
  "author": "Geoff Whatley",
  "license": "MIT",
  "homepage": "https://github.com/meatwallace/strap#readme",
  "devDependencies": {
    "babel-core": "^6.3.26",
    "babel-eslint": "^7.0.0",
    "babel-jest": "^18.0.0",
    "babel-loader": "^6.2.8",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-es2016": "^6.16.0",
    "babel-preset-es2017": "^6.16.0",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "commitizen": "^2.9.5",
    "css-loader": "^0.26.0",
    "cz-conventional-changelog": "^1.2.0",
    "enzyme": "^2.1.0",
    "eslint": "^3.6.1",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-react": "^6.3.0",
    "file-loader": "^0.9.0",
    "html-webpack-plugin": "^2.24.1",
    "jest-cli": "^18.1.0",
    "jest-transform-graphql": "^1.0.0",
    "postcss-cssnext": "^2.9.0",
    "postcss-import": "^9.1.0",
    "postcss-loader": "^1.1.1",
    "react-addons-test-utils": "^15.3.2",
    "react-hot-loader": "^3.0.0-beta.6",
    "sinon": "^1.17.6",
    "style-loader": "^0.13.1",
    "stylelint": "^7.6.0",
    "stylelint-config-standard": "15",
    "svg-url-loader": "^1.1.0",
    "url-loader": "^0.5.7",
    "webpack": "^2.2.0",
    "webpack-dev-server": "^2.2.0",
    "webpack-merge": "^2.4.0"
  },
  "dependencies": {
    "apollo-client": "^0.8.0",
    "graphql-tag": "^1.2.3",
    "immutable": "^3.8.1",
    "lodash": "^4.17.4",
    "react": "^15.4.2",
    "react-apollo": "^0.8.3",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.2",
    "redux": "^3.6.0",
    "redux-immutable": "^3.0.10",
    "redux-logger": "^2.7.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "moduleNameMapper": {
      "^~(.*)$": "<rootDir>/src/common$1",
      "^.+\\.(jpg|jpeg|png|gif|svg)$": "<rootDir>/config/jest/fileTransform.js",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js"
    },
    "transform": {
      "\\.(gql|graphql)$": "jest-transform-graphql",
      ".*": "babel-jest"
    }
  }
}
