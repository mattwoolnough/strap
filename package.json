{
  "name": "strap",
  "version": "0.0.0",
  "description": "Javascript monorepo boilerplate",
  "scripts": {
    "start": "npm run build:browser:dev & npm run build:server:dev",
    "build:browser:dev": "webpack-dev-server --progress --env 'browser.dev'",
    "build:browser:prod": "webpack --progress --env 'browser.prod'",
    "build:server:dev": "webpack --watch --progress --env 'server.dev' & nodemon ./dist/server/main.dev.bundle.js",
    "test": "jest --watch --coverage",
    "test-ci": "jest --bail --coverage",
    "lint": "eslint ./src --fix; stylelint ./src/**/*.css",
    "help": "webpack --help"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/meatwallace/strap.git"
  },
  "author": "Geoff Whatley",
  "license": "MIT",
  "main": "src/native/index.js",
  "homepage": "https://github.com/meatwallace/strap#readme",
  "engines": {
    "node": ">= 6.0.0"
  },
  "devDependencies": {
    "babel-core": "^6.3.26",
    "babel-eslint": "^7.0.0",
    "babel-jest": "^18.0.0",
    "babel-loader": "^6.2.8",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-es2016": "^6.16.0",
    "babel-preset-es2017": "^6.16.0",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "commitizen": "^2.9.5",
    "css-loader": "^0.26.0",
    "cz-conventional-changelog": "^1.2.0",
    "enzyme": "^2.1.0",
    "eslint": "^3.14.1",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-import-resolver-webpack": "^0.8.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-react": "^6.3.0",
    "file-loader": "^0.10.0",
    "html-webpack-plugin": "^2.28.0",
    "jest-cli": "^18.1.0",
    "jest-transform-graphql": "^1.0.0",
    "nodemon": "^1.11.0",
    "postcss-cssnext": "^2.9.0",
    "postcss-import": "^9.1.0",
    "postcss-loader": "^1.1.1",
    "postcss-modular-scale": "^2.5.2",
    "react-addons-test-utils": "^15.3.2",
    "react-hot-loader": "^3.0.0-beta.6",
    "request": "^2.79.0",
    "sinon": "^1.17.6",
    "style-loader": "^0.13.1",
    "stylelint": "^7.8.0",
    "stylelint-config-standard": "^16.0.0",
    "svg-url-loader": "^2.0.1",
    "url-loader": "^0.5.7",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.2.0",
    "webpack-merge": "^2.6.1"
  },
  "dependencies": {
    "@exponent/vector-icons": "~4.0.0",
    "@shoutem/ui": "^0.10.8",
    "analytics-react-native": "^1.0.1",
    "apollo-client": "^0.8.1",
    "axios": "^0.15.3",
    "bcrypt-as-promised": "^1.1.0",
    "body-parser": "^1.16.0",
    "compression": "^1.6.2",
    "connected-react-router": "^4.0.0-beta.2",
    "cors": "^2.8.1",
    "exponent": "^13.1.1-rc.1",
    "feathers": "^2.0.3",
    "feathers-authentication": "^0.7.11",
    "feathers-configuration": "^0.4.1",
    "feathers-errors": "^2.5.0",
    "feathers-hooks": "^1.7.1",
    "feathers-mongoose": "^4.0.1",
    "feathers-rest": "^1.6.0",
    "feathers-socketio": "^1.4.2",
    "graphql": "^0.9.1",
    "graphql-server-express": "^0.6.0",
    "graphql-tag": "^1.2.3",
    "graphql-tools": "^0.9.2",
    "history": "^4.5.1",
    "jsonwebtoken": "^7.2.1",
    "lodash": "^4.17.4",
    "mongoose": "^4.8.1",
    "node-fetch": "^1.6.3",
    "passport": "^0.3.2",
    "react": "^15.4.2",
    "react-apollo": "^0.9.0",
    "react-dom": "^15.4.2",
    "react-helmet": "^4.0.0",
    "react-native": "https://github.com/exponent/react-native/archive/sdk-13.0.3.tar.gz",
    "react-redux": "^5.0.2",
    "react-router": "next",
    "react-router-addons-controlled": "^0.0.1",
    "react-router-native": "next",
    "redux": "^3.6.0",
    "redux-logger": "^2.8.1",
    "sanitize.css": "^4.1.0",
    "whatwg-fetch": "^2.0.2",
    "winston": "^2.3.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "globals": {
      "__DEV__": false
    },
    "moduleNameMapper": {
      "^~(.*)$": "<rootDir>/src/common$1",
      "^#(.*)$": "<rootDir>/src/server$1",
      "^.+\\.(jpg|jpeg|png|gif|svg)$": "<rootDir>/config/jest/fileTransform.js",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js"
    },
    "preset": "react-native",
    "transform": {
      "\\.(gql|graphql)$": "jest-transform-graphql",
      ".*": "babel-jest"
    }
  }
}
